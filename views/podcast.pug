extends layout.pug
include review-form
append head

   script(src="/javascripts/podcast.js" type="module" defer)

block content
    h1(id ="innerHeader" class=`${podcast.name}`)= podcast.name
    div(class='main-content-container') 
        div(class='left-bar')
            div(class="img_holder")
                img(src=`/images/catalog/${podcast.id}.jpeg`)
            +review-form
        div(class='center-content')
            div(class="pod_description__container")
                div(class="pod_description")
                    h4 Description
                    p #{podcast.description}
                div(class="pod_description") 
                    h4 Genre 
                        span #{podcast.Genre.name}
                div(class="pod_description")
                    h4(class="avgRating" id=`avg_rating-${podcast.id}`)
                div(class = "shelf_btn_container")
                    h3(class='userId', id=userId) Add To My Shelf

                    div(class="shelf_btn"  id=podcast.id)
                        button(class="shelf_btn" id="Current" type='button' title='Current') üéß
                        button(class="shelf_btn" id="Thumbs_Up" type='button' title='Thumbs Up') üëç
                        button(class="shelf_btn" id= "On_My_Radar" type='button' title='On My Radar') üëÄ
                        button(class="shelf_btn" id="Meh" type='button' title='Meh') üòë
                        button(class="shelf_btn" id="Thumbs_Down" type='button' title='Thumbs Down') üëé

            div(class="reviews")
                h2(class='idgrabber' id=podcast.id)= `What Other People are Saying About`
                    aside 
                        em
                            b #{podcast.name}

                div(id="ReviewDiv")

        div(class='right-bar')
            h2 Other Podcasts in this Genre
            each podcast in otherPodcasts.Podcasts
                div(class='Genre_Pods')
                    a(href=`/podcasts/${podcast.id}`)= podcast.name

            .message

        script(src="/javascripts/index.js" type="module" defer)

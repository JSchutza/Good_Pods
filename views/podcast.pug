extends layout.pug

block content
    div(class='main-content-container')
        div(class='left-bar')
            div
                img(src='/images/logo.png')
            div
                h2 Review this Pod
                form(action=`/podcasts/${podcast.id}` method="post")
                    div(class="stars")
                        input(id="star5" name="star" type="radio" value="5" class="radio-btn hide")
                        label(for="star5") ‚òÜ
                        input(id="star4" name="star" type="radio" value="4" class="radio-btn hide")
                        label(for="star4") ‚òÜ
                        input(id="star3" name="star" type="radio" value="3" class="radio-btn hide")
                        label(for="star3") ‚òÜ
                        input(id="star2" name="star" type="radio" value="2" class="radio-btn hide")
                        label(for="star2") ‚òÜ
                        input(id="star1" name="star" type="radio" value="1" class="radio-btn hide")
                        label(for="star1") ‚òÜ
                    div(class="review")
                        textarea(class="review" placeholder="Add your review to this podcast" cols="30", rows="10")
                        input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        button(type="submit") Add Your review
        div(class='center-content')
            h1= podcast.name
            p= podcast.description
            p= podcast.Genre.name
            div(class='shelf-btns')
                h3 Add To My Shelf
                button(type='button' title='Current') üéß
                button(type='button' title='Thumbs Up') üëç
                button(type='button' title='On My Radar') üëÄ
                button(type='button' title='Meh') üòë
                button(type='button' title='Thumbs Down') üëé
            div(class="reviews")
                h2 What Other People are Saying About #{podcast.name}
                div(id="ReviewDiv")
                    
        div(class='right-bar')
            h2 Other Podcasts in this Genre
            each podcast in otherPodcasts.Podcasts
                div(class='')
                    a(href=`/podcasts/${podcast.id}`)= podcast.name


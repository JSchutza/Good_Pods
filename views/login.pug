extends layout.pug

block content
  if (errors)
    div
      each error in errors
        ul
          li= error
  form(action="/login" method="post")
    div
      label Email
      input(type="email" name="email")
    div
      label Password
      input(type="password" name="password")
      input(type="hidden" name="_csrf" value=csrfToken)
    div
      button(type="submit") Log in
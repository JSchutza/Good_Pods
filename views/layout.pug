doctype html
html
  head
  block head
    title="PODEMIC"
    link(rel='stylesheet' href='/stylesheets/index.css')
    script(src="/javascripts/index.js" type="module" defer)
    script(type='text/javascript' src='Podemic/config/index.js')
    script(src="https://kit.fontawesome.com/4b23a743f4.js" crossorigin="anonymous")



  block navbar
    div(class='nav-bar')
      if authenticated
        div(class='logo-div')
          a(href="/me")
            //- img(src="/images/pod2point0Logo.png" class='logo')    
        a(href="/me/logout") Log Out
        div(class='search')
          button(id="searchButton" type='button')
            i(class="fas fa-search")
          input(id="searchInput" type="text" placeholder="search")
        a(href="/feed" class='nav-btn') Pod Feed
        a(href="/me" class='text-logo') Podemic
      else
        div(class='logo-div')
          a(href="/")
        a(href="/me/login" class='nav-btn') Log In
        a(href="/" class='text-logo') Podemic




  body
    div(id="searchResults" class ="hidden searchres")
  block content
